# =============================================================================
# Code Documentation Assistant - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values

# =============================================================================
# API Keys (Required)
# =============================================================================
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Get from: https://jina.ai/ (Primary embedding service)
JINA_API_KEY=your_jina_api_key_here

# Get from: https://platform.openai.com/ (Fallback embedding service)
OPENAI_API_KEY=your_openai_api_key_here

# =============================================================================
# Backend Configuration
# =============================================================================
BACKEND_PORT=8000
BACKEND_HOST=0.0.0.0
LOG_LEVEL=info

# =============================================================================
# Frontend Configuration
# =============================================================================
VITE_API_URL=http://localhost:8000
VITE_FRONTEND_PORT=3000

# =============================================================================
# ChromaDB Configuration
# =============================================================================
CHROMADB_HOST=chromadb
CHROMADB_PORT=8000
CHROMADB_PERSIST_DIRECTORY=/chroma/chroma

# =============================================================================
# Temporal Configuration
# =============================================================================
TEMPORAL_HOST=temporal
TEMPORAL_PORT=7233

# =============================================================================
# PostgreSQL Configuration (for Temporal)
# =============================================================================
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=temporal
POSTGRES_PASSWORD=temporal
POSTGRES_DB=temporal

# =============================================================================
# Monitoring Configuration (Optional)
# =============================================================================
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin

# =============================================================================
# File Upload Configuration
# =============================================================================
MAX_FILE_SIZE_MB=100
MAX_FILE_SIZE_BYTES=104857600

# =============================================================================
# Performance Configuration
# =============================================================================
# Embedding batch size
EMBEDDING_BATCH_SIZE=10

# Chunk size for code parsing
CHUNK_MIN_TOKENS=512
CHUNK_MAX_TOKENS=1024
CHUNK_OVERLAP_TOKENS=50

# Retrieval configuration
DEFAULT_TOP_K_RESULTS=5
MAX_TOP_K_RESULTS=20

# Retry configuration
RETRY_INITIAL_INTERVAL_SECONDS=2
RETRY_MAX_INTERVAL_SECONDS=60
RETRY_MAX_ELAPSED_TIME_SECONDS=1800

# =============================================================================
# Optional: Feature Flags
# =============================================================================
# Enable secret detection (true/false)
ENABLE_SECRET_DETECTION=true

# Enable query streaming (true/false)
ENABLE_STREAMING=true

# Session timeout in seconds
SESSION_TIMEOUT_SECONDS=3600
